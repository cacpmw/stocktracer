<% if notice %>
  <p class="mt-3 alert alert-primary alert-dismissible fade show"><%= notice if notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>

<% end %>
<% if alert %>
  <p class="mt-3 alert alert-danger alert-dismissible fade show"><%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>

<% end %>